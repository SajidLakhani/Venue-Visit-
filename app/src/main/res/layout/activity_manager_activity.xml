<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager_activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout2"
        android:padding="20dp">

        <ImageView
            android:layout_width="50dp"
            android:id="@+id/email_view"
            android:layout_height="45dp"
            android:src="@drawable/search"
            android:background="@color/colorPrimary"
            android:tint="@color/white"
            android:padding="8dp"/>

        <EditText
            android:hint="Search Here"
            android:inputType="text"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/email_view"
            android:layout_toRightOf="@id/email_view"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:id="@+id/edit1"
            android:background="@color/editTextBG"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@id/edit1"
           android:padding="5dp"
           android:layout_marginTop="40dp"
           android:id="@+id/liner_layout1"
           >

           <ImageView
               android:layout_width="45dp"
               android:layout_height="40dp"
               android:layout_marginTop="5dp"
               android:src="@drawable/venue"
               android:tint="@color/colorPrimary"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Venus Banquet"
               android:textSize="20sp"
               android:textColor="@color/colorPrimary"
               android:padding="10dp"
               android:id="@+id/View1"/>






       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/liner_layout1"
            android:padding="5dp"
            android:layout_marginTop="40dp"
            android:id="@+id/liner_layout2"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/photographer"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Awesome Photography"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:padding="10dp"
                android:id="@+id/View2"/>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/liner_layout2"
            android:padding="5dp"
            android:layout_marginTop="40dp"
            android:id="@+id/liner_layout3"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/caterer"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Awesome Caterers"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:padding="10dp"
                android:id="@+id/View3"/>






        </LinearLayout>



    </RelativeLayout>




</ScrollView>